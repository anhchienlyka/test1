services:
  basketdbv1:
    container_name: basketdbv1
    image: redis:alpine
    ports:
    - published: 6379
      target: 6379
    restart: always
  basketv1.api:
    build:
      context: C:\Users\PCC\source\repos\micorservice\src
      dockerfile: Services/Basketv1/Basketv1.API/Dockerfile
    container_name: basketv1.api
    depends_on:
      basketdbv1:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      CacheSettings:ConnectionString: basketdbv1:6379
      GrpcSettings:DiscountUrl: http://discount.grpc
    image: basketv1api
    ports:
    - published: 8001
      target: 80
  catalog.api.v1:
    build:
      context: C:\Users\PCC\source\repos\micorservice\src
      dockerfile: Services/Catalog/Catalog.API/Dockerfile
    container_name: catalog.api.v1
    depends_on:
      catalogdb.v1:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseSettings:ConnectionString: mongodb://catalogdb.v1:27017
    image: catalogapiv1
    ports:
    - published: 8000
      target: 80
  catalogdb.v1:
    container_name: catalogdb.v1
    image: mongo
    ports:
    - published: 2701
      target: 27017
    restart: always
    volumes:
    - mongo_data:/data/db:rw
  discount.grpc:
    build:
      context: C:\Users\PCC\source\repos\micorservice\src
      dockerfile: Services/Discount/Discount.Grpc/Dockerfile
    container_name: discount.grpc
    depends_on:
      discountdb.v1:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseSettings:ConnectionString: Server=discountdb.v1;Port=5432;Database=DiscountDb;User
        Id=admin;Password=admin1234;
    image: discountgrpc
    ports:
    - published: 8003
      target: 80
  discountdb.v1:
    container_name: discountdb.v1
    environment:
      POSTGRES_DB: DiscountDb
      POSTGRES_PASSWORD: admin1234
      POSTGRES_USER: admin
    image: postgres
    ports:
    - published: 5432
      target: 5432
    restart: always
    volumes:
    - postgresv1_data:/var/lib/postgresql/data/:rw
  discountv1.api:
    build:
      context: C:\Users\PCC\source\repos\micorservice\src
      dockerfile: Services/Discount/Discountv1.API/Dockerfile
    container_name: discountv1.api
    depends_on:
      discountdb.v1:
        condition: service_started
    environment:
      ASPNETCORE_ENVIRONMENT: Development
      DatabaseSettings:ConnectionString: Server=discountdb.v1;Port=5432;Database=DiscountDb;User
        Id=admin;Password=admin1234;
    image: discountv1api
    ports:
    - published: 8002
      target: 80
  pgadmin.v1:
    container_name: pgadmin.v1
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@aspnetrun.com
      PGADMIN_DEFAULT_PASSWORD: admin1234
    image: dpage/pgadmin4
    ports:
    - published: 5050
      target: 80
    restart: always
    volumes:
    - pgadminv1_data:/root/.pgadmin:rw
  portainerv1:
    container_name: portainerv1
    image: portainer/portainer-ce
    ports:
    - published: 8080
      target: 8000
    - published: 9000
      target: 9000
    restart: always
    volumes:
    - portainerv1_data:/data:rw
    - /var/run/docker.sock:/var/run/docker.sock:rw
version: '3.4'
volumes:
  mongo_data: {}
  pgadminv1_data: {}
  portainerv1_data: {}
  postgresv1_data: {}