@model IEnumerable<CategoryResponse>
@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>
<div class="list-group mt-2">
    @foreach (var category in Model)
    {
        <a asp-controller="Category" asp-action="ListPost" asp-route-categoryId="@category.Id" class="list-group-item list-group-item-action">@category.Name - @category.Description</a>
    }
</div>