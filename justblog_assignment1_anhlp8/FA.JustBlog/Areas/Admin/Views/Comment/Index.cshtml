@model PagingResult<CommentResponse>
@{
    ViewData["Title"] = "Comment";
}
<div class="table-responsive">
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Email</th>
                <th>Header</th>
                <th>Text</th>
                <th>Time</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var comment in Model.Items)
            {
                <tr>
                    <td>@comment.Id</td>
                    <td>@comment.Name</td>
                    <td>@comment.Email</td>
                    <td>@comment.CommentHeader</td>
                    <td>@comment.CommentText</td>
                    <td>@comment.CommandTime</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn-danger btn btn-sm" asp-area="Admin" asp-controller="Comment" asp-action="Delete" asp-route-id="@comment.Id">Delete</a>
                            <a class="btn-success btn btn-sm" asp-area="Admin" asp-controller="Comment" asp-action="Edit" asp-route-id="@comment.Id">Edit</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" align="center">
                    <div class="d-flex justify-content-center align-items-end">
                        <pager pager-model="@Model"></pager>
                    </div>
                </td>
            </tr>
        </tfoot>
    </table>
</div>