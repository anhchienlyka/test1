@model EditUserViewModel
@{
    ViewData["Title"] = "Edit new user";
}
<form method="post">
    @Html.HiddenFor(m => m.UserId)
    <div class="form-group">
        <label asp-for="Username"></label>
        <input asp-for="Username" class="form-control">
        <span class="text-danger" asp-validation-for="Username"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control">
        <span class="text-danger" asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control">
        <span class="text-danger" asp-validation-for="Password"></span>
    </div>

    <div class="card">
        <div class="card-header">Add role to user</div>
        <div class="card-body">
            @for (var i = 0; i < Model.SelectRoles.Count; i++)
            {
                <div class="form-check mt-1">
                    <input asp-for="@Model.SelectRoles[i].RoleId" hidden />
                    <input asp-for="@Model.SelectRoles[i].RoleName" hidden />
                    <input class="form-check-input" asp-for="@Model.SelectRoles[i].IsSelected" />
                    <label class="form-check-label" asp-for="@Model.SelectRoles[i].IsSelected">@Model.SelectRoles[i].RoleName</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary my-3">Submit</button>
</form>