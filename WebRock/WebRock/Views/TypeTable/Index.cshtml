@model IEnumerable<WebRock.Models.TypeTable>

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Index list</h2>
    </div>
    <div class="col-6">

        <a asp-controller="TypeTable" asp-action="Create" class="btn btn-primary">
            Create New Index
        </a>

    </div>

    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Index Id
                    </th>
                    <th>
                        Index Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Id</td>
                        <td width="50%">@obj.Name</td>
                        <td class=" btn-group" role="group">
                            <a asp-controller="TypeTable" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="TypeTable" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Index exits</p>
    }
</div> 