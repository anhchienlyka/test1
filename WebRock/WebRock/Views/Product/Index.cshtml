@model IEnumerable<WebRock.Models.Product>

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Product list</h2>
    </div>
    <div class="col-6">

        <a asp-controller="Product" asp-action="Upsert" class="btn btn-primary">
            Create New Product
        </a>

    </div>

    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Product Name
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Image
                    <th>
                        Category Name
                    </th>
                    <th>
                        Type Name
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="50%">@obj.Name</td>
                    <td width="50%">@obj.Description</td>
                    <td width="50%">@obj.Price</td>
                    <td width="50%">@obj.Image</td>
                    <td width="50%">@obj.Category.Name</td>
                    <td  width="50%">@obj.Types.Name</td>
                    <td class="w-75 btn-group" role="group">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                Edit
                            </a>
                            <a asp-controller="Product" asp-route-Id="@obj.Id" asp-action="DeletePost" class="btn btn-danger mx-2">
                                Delete
                            </a>
                        </div>
                    </td>

                </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Category exits</p>
    }
</div> 